<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/floatingwindowbackground1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/floating_window_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="测试"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/floating_window_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:text="21:09:59"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@id/floating_window_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="2020-12-14 星期一"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/floating_window_thistime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="本次锁机时间\n21:48--21:49"
        android:textAlignment="center"
        android:textColor="@color/white"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="125dp"
        android:textColor="@color/white">

        <Button
            android:id="@+id/floating_window_zaoButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/lockplay"
            android:textColor="@color/white" />

    </RelativeLayout>


</LinearLayout>